{
    "name": "aroosi",
    "version": "1.0.0",
    "private": true,
    "description": "Aroosi - Monorepo for web and mobile apps",
    "scripts": {
        "dev": "pnpm --filter @aroosi/web dev",
        "dev:mobile": "pnpm --filter @aroosi/mobile start",
        "build": "pnpm --filter @aroosi/web build",
        "build:mobile": "pnpm --filter @aroosi/mobile build",
        "lint": "pnpm -r lint",
        "type-check": "pnpm -r type-check",
        "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules"
    },
    "devDependencies": {
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@9.15.1"
}