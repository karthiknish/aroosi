{
    "name": "aroosi",
    "version": "1.0.0",
    "private": true,
    "description": "Aroosi - Monorepo for web and mobile apps",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev -w @aroosi/web",
        "dev:mobile": "npm run start -w @aroosi/mobile",
        "build": "npm run build -w @aroosi/web",
        "build:mobile": "npm run build -w @aroosi/mobile",
        "lint": "npm run lint --workspaces --if-present",
        "type-check": "npm run type-check --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
    },
    "devDependencies": {
        "typescript": "5.9.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}