{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Aroosi Base TypeScript Config",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        "ios",
        "android"
    ]
}